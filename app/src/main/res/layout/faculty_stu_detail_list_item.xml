<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/AppMain"
    android:layout_marginTop="1dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/apply_custom_list_com_name"
        android:text="@string/blank"
        android:layout_weight="2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="1dp"
        android:id="@+id/view_remove"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="match_parent"
        android:background="@color/AppThird"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/AppThird"
        android:id="@+id/apply_custom_list_com_reason"
        android:layout_weight="1"
        android:text="@string/blank"
        android:textSize="14sp" />
</LinearLayout>